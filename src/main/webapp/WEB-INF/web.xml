<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://Java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	metadata-complete="false" version="3.0">

	<display-name>Archetype Created Web Application</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<filter>
		<filter-name>setCharacterEncoding</filter-name>
		<filter-class>core.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>setCharacterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
		<dispatcher>ERROR</dispatcher>
		<dispatcher>ASYNC</dispatcher>
	</filter-mapping>

	<!-- move -->
	<servlet>
		<servlet-name>MoveRequestServlet</servlet-name>
		<servlet-class>com.move_request.controller.MoveRequestServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MoveRequestServlet</servlet-name>
		<url-pattern>/move/moveRequest.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MoveOrderServlet</servlet-name>
		<servlet-class>com.move_order.controller.MoveOrderServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MoveOrderServlet</servlet-name>
		<url-pattern>/move/moveorder.do</url-pattern>
	</servlet-mapping>

	<!-- activity -->
	<servlet>
		<servlet-name>ActaServlet</servlet-name>
		<servlet-class>com.activity_attend.controller.ActivityAttendServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ActaServlet</servlet-name>
		<url-pattern>/activity/acta.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ActrServlet</servlet-name>
		<servlet-class>com.activity_report.controller.ActivityReportServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ActrServlet</servlet-name>
		<url-pattern>/activity/actr.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ActivityServlet</servlet-name>
		<servlet-class>com.activity.controller.ActivityServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ActivityServlet</servlet-name>
		<url-pattern>/activity/act.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ActrImage</servlet-name>
		<servlet-class>com.activity_report.controller.DBGifReader4</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ActrImage</servlet-name>
		<url-pattern>/activity/ActrImage.do</url-pattern>
	</servlet-mapping>
	
	<!-- product -->
	<servlet>
		<servlet-name>NewsServlet</servlet-name>
		<servlet-class>com.news.controller.NewsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NewsServlet</servlet-name>
		<url-pattern>/news/NewsServlet</url-pattern>
	</servlet-mapping>

</web-app>
